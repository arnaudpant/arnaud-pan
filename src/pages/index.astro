---
import Layout from "@/layouts/Layout.astro";
import {listCardsHomeElt} from "@/data/blocsHome"
import BlockHome from "@/components/BlockHome.astro";
import PageLayout from "@/layouts/PageLayout.astro";
---

<Layout title="Arnaud P.">
	<PageLayout>
		<section class="py-8">
			<div class="flex items-center gap-2">
				<p>ARNAUD P.</p>
				<span><svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#5b9bd5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-rotate3d-icon lucide-rotate-3d"><path d="M16.466 7.5C15.643 4.237 13.952 2 12 2 9.239 2 7 6.477 7 12s2.239 10 5 10c.342 0 .677-.069 1-.2"/><path d="m15.194 13.707 3.814 1.86-1.86 3.814"/><path d="M19 15.57c-1.804.885-4.274 1.43-7 1.43-5.523 0-10-2.239-10-5s4.477-5 10-5c4.838 0 8.873 1.718 9.8 4"/></svg></span>
				<p>NANCY, FRANCE</p>
			</div>
			<h1 class="font-display text-hero pt-4">Cr√©ateur de sites web,<br /> photographe de l'ordinaire,<br /> gribouilleur de carnets.</h1>
		</section>
		<section class="flex flex-wrap gap-8">
			{
				listCardsHomeElt.map((bloc) => (
					<BlockHome cardHome={bloc}  />
				))
			}
		</section>
	</PageLayout>
</Layout>
